<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanlasXamarinEssentials.Accelerometerpage"
             Title="JRC Xamarin Essentials">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Accelerometer"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.ColumnSpan="2" x:Name="LabelX" FontSize="Medium" FontAttributes="Bold" TextColor="Teal"/>
                <Label Grid.Row="1" Grid.ColumnSpan="2" x:Name="LabelY" FontSize="Medium" FontAttributes="Bold" TextColor="IndianRed"/>
                <Label Grid.Row="2" Grid.ColumnSpan="2" x:Name="LabelZ"  FontSize="Medium" FontAttributes="Bold" TextColor="DarkOliveGreen"/>
                <Button Grid.Row="3" Grid.Column="0" Text="Start" x:Name="ButtonStart" Clicked="ButtonStart_Clicked"/>
                <Button Grid.Row="3" Grid.Column="1" Text="Stop" x:Name="ButtonStop" Clicked="ButtonStop_Clicked"/>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>